# ios/Podfile
platform :ios, '12.0'

# Disable CocoaPods analytics (optional)
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# -------------------------------------------------
# ‚û°Ô∏è  Flutter-Pod-Script einbinden  (WICHTIG!)
# -------------------------------------------------
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  File.dirname(File.realpath(__FILE__))
)

flutter_ios_podfile_setup   # Vorbereitung durch Flutter

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # üëâ hier ruft CocoaPods jetzt **korrekt** die Flutter-Helfer-Methode auf
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  flutter_post_install(installer)
end
