# ios/Podfile
platform :ios, '12.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# ------------------------------------------------------------------
# Das Flutter-Root kommt als ENV-Variable vom Befehl `flutter build`
# ------------------------------------------------------------------
flutter_root = ENV['FLUTTER_ROOT']
require File.expand_path(
  File.join('packages', 'flutter_tools', 'bin', 'podhelper'),
  flutter_root
)

flutter_ios_podfile_setup   # Vorbereitung durch Flutter

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # Alle Flutter-Pods + Plugins installieren
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  flutter_post_install(installer)

  # Einheitlich iOS 12 einstellen, sonst gibtâ€™s Warnungen
  installer.pods_project.targets.each do |t|
    t.build_configurations.each do |c|
      c.build_settings['IPH
