# iOS 13+ ist Pflicht für Firebase & Co.
platform :ios, '13.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Flutter-Helper einbinden – Pfad NICHT ändern!
require File.expand_path('../Flutter/ephemeral/.symlinks/flutter/dart_tools/bin/podhelper.rb', __FILE__)

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end
