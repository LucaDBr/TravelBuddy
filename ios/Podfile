# ios/Podfile â€” Flutter-kompatibel mit Codemagic

platform :ios, '13.0'

# Dynamisch korrektes Flutter SDK finden
flutter_root = ENV['FLUTTER_ROOT']
load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelpers.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  install_all_flutter_pods(File.dirname(File.realpath(__FILE__)))
end
